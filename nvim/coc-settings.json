{
  "coc.preferences.formatOnSaveFiletypes": ["css", "html", "javascript", "json", "markdown", "yaml"],
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "prettier.printWidth": 120,
  "markdownlint.config": {
    "line_length": false
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["Dockerfile"],
      "args": ["--stdio"],
      "initializationOptions": {
        "deprecatedMaintainer": "warning",
        "directiveCasing": "error",
        "emptyContinuationLine": "error"
      }
    },
    "golang": {
      "command": "gopls",
      "args": ["serve"],
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "staticcheck": true,
        "experimentalDisabledAnalyses": ["ST1000"]
      }
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"]
    }
  },
  "yaml.schemas": {
    "kubernetes": "/home/arccy/kluster/*.yaml"
  }
}
