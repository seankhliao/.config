{
  "coc.preferences.formatOnSaveFiletypes": ["css", "go", "html", "javascript", "json", "markdown", "terraform", "yaml"],
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "prettier.printWidth": 120,
  "markdownlint.config": {
    "line_length": false
  },
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["Dockerfile"],
      "args": ["--stdio"],
      "initializationOptions": {
        "directiveCasing": "error",
        "emptyContinuationLine": "error"
      }
    },
    "golang": {
      "command": "gopls",
      "args": ["serve"],
      "rootPatterns": ["go.mod"],
      "filetypes": ["go", "gomod"],
      "initializationOptions": {
        "linksInHover": false,
        "staticcheck": true,
        "analyses": {
          "ST1000": false
        }
      }
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"]
    }
  },
  "yaml": {
    "schemas": {
      "https://json.schemastore.org/kustomization": ["kustomization.yaml"],
      "https://json.schemastore.org/github-workflow": [".github/workflows/*.yaml"],
      "https://json.schemastore.org/prometheus": ["prometheus.yml"],
      "https://json.schemastore.org/traefik-v2": ["traefik.yaml"],
      "kubernetes": ["*.k8s.yaml"]
    }
  }
}
