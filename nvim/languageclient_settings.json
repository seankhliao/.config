{
    "docker": {
        "languageserver": {
            "deprecatedMaintainer": "warning",
            "directiveCasing": "error",
            "emptyContinuationLine": "error"
        }
    },
    "gopls": {
        "usePlaceholders": true,
        "staticcheck": true,
        "completeUnimported": true,
        "deepCompletion": true,
        "go-diff": true
    },
    "json": {
        "format": {
            "enable": true
        }
    },
    "yaml": {
        "format": {
            "enable": false
        },
        "validate": true
    }
}
