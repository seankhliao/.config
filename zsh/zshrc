#!/bin/zsh

# seankhliao's zshrc
# sections begin with 20x =


# ==================== zshrc profiler
# at the emd of each section
# set PROFILER=1
# usage:
#   _profiler "section name"
#
local PROFILER=0
local _time=$(date +%N)
_profiler () { [[ $PROFILER -ne 0 ]] && echo "$1: $(( ($(date +%N) - ${_time}) / 1000000 ))ms" && _time=$(date +%N) }


# ==================== zsh keybindings
#
zle -N _sudo_cmdline
zle -N history-substring-search-up
zle -N history-substring-search-down
# Defined shortcut keys: [Esc] [Esc]
bindkey -e
bindkey "\e\e" _sudo_cmdline
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down
bindkey '^[[H' beginning-of-line
bindkey '^[[4~' end-of-line
bindkey '^[[F' end-of-line

_profiler "zsh keybinders"


# =================== zsh options
#
setopt AUTOCD
setopt IGNORE_EOF

setopt EXTENDED_GLOB
setopt GLOB_DOTS

setopt AUTO_LIST
setopt AUTO_MENU
setopt AUTO_PARAM_SLASH
setopt COMPLETE_IN_WORD
setopt HASH_LIST_ALL

setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_DUPS
setopt HIST_FIND_NO_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_NO_FUNCTIONS
setopt HIST_NO_STORE
setopt HIST_REDUCE_BLANKS
setopt HIST_SAVE_NO_DUPS
setopt SHARE_HISTORY

setopt ALIASES

_profiler "zsh options"


# =================== autoload functions
# https://unix.stackexchange.com/questions/33255/how-to-define-and-load-your-own-shell-function-in-zsh
#
# lazily loaded function per file
# with cached compilations
#
# naming:
#       _underscore_prefix: internal functions
#       kebab-casing: user callable
#
# recompile:
#       z-comp-funcs
#
fpath=( "$ZDOTDIR"/funcs "${fpath[@]}" )
funcs=(
    _auto_git_aliases
    # _gcloud_complete
    # _kubectl_complete
    _prompt
    _source_plugins
    _sudo_cmdline
    cicd
    colortest
    gsall
    keyless-ssh
    md
    t
    z-comp-funcs
    z-update-plugins
)
autoload -Uz ${funcs}

_profiler "autoload funcs"


# =================== zsh completions
#
# this section should come after autoload functions
# to allow loading of shell completion funcs
#
# non alphanumeric chars that are part of a word
# export WORDCHARS=${WORDCHARS//-}

autoload -Uz url-quote-magic
zle -N self-insert url-quote-magic

zstyle ':completion::complete:*' gain-privileges 1
zstyle ':completion:*' group-name ''
zstyle ':completion:*' menu select
zstyle ':completion:*' rehash true
zstyle ':completion:*' list-colors "${(@s.:.)LS_COLORS}"
zstyle ':completion:*:*:-command-:*:*' ignored-patterns '_*'
zstyle ':completion:*' matcher-list '' \
    '+m:{a-z}={A-Z}' '+m:{A-Z}={a-z}' \
    'r:[^[:alpha:]]||[[:alpha:]]=** r:|=* m:{a-z\-}={A-Z\_}' \
    'r:|?=** m:{a-z\-}={A-Z\_}'

autoload -Uz compinit
compinit -d "$XDG_RUNTIME_DIR"/zcompdump

source /opt/google-cloud-sdk/path.zsh.inc
source /opt/google-cloud-sdk/completion.zsh.inc

_profiler "zsh completion"


# =================== dockerfuncs
# https://github.com/jessfraz/dockerfiles
#
# run things in docker instead of natively
#
# source "$ZDOTDIR"/dockerfuncs
#
# _profiler "dockerfuncs"


# =================== zsh prompt
#
_prompt

_profiler "zsh prompt"


# ==================== zsh aliases
# suffix aliases
# usage:
#       runs files with these programs
alias -s go='go run'
alias -s py='python3'


# go up
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'

# set default opts
alias cp='cp -v'
alias diff='diff --color=always'
alias grep='grep --color=auto'
alias grep='rg -S -p'
# alias l="ls -lh --color=auto"
# alias ll="ls -alh --color=auto"
alias l='exa -l --git --time-style iso'
alias ll='exa -l -a --git --time-style iso'
alias ln='ln -v'
alias ls='ls --color'
alias mv='mv -v'
alias sudo='sudo -E'

# short
alias cdr='cd -P .'
alias cr='google-chrome-unstable'
alias diskspace="df -P -kHl"
alias drun='docker run --network host --rm -it -v $(pwd):/workspace -w /workspace'
alias filespace='du -d 1 -h . 2>/dev/null | sort -h -r'
alias g='git'

_auto_git_aliases

alias h='htop'
alias kaf='kubectl apply -f'
alias kdf='kubectl delete -f'
alias kdp='kubectl delete po -l'
alias kubectl='command kubectl --cache-dir=/home/arccy/.cache/kube-http'
alias p='yay'
alias p-cl='yay -Yc'
alias p-rm='yay -Runsc'
alias p-up='yay -Syu --noconfirm'
alias py='python3'
alias py2='python2'
alias s='ssh'
alias sd='sudo systemctl'
alias sdu='systemctl --user'
alias tag='t'
alias v='vim'; [[ -f '/usr/bin/nvim' ]] && alias v='nvim'

_profiler "zsh aliases"


# =================== zsh plugins
#
local PLUGIN_HOME=$XDG_DATA_HOME/zsh/plugins
local plugins=(
    'zsh-autosuggestions'
    'zsh-history-substring-search'
    'zsh-syntax-highlighting'
)
_source_plugins

_profiler "zsh plugins"
