[advice]
	addIgnoredFile = false
[alias]
    a       = add
    amend   = commit --amend --reuse-message=HEAD

    b       = checkout
    bprune  = fetch -a
    bd      = branch -D
    bn      = checkout -b

    c       = clone --recursive

    cam     = !git commit -a -m "\""$*"\"" && :
    camp    = !git commit -a -m "\""$*"\"" && git push && :
    cm      = !git commit  -m "\""$*"\"" && :

    d       = diff
    dh      = diff HEAD

    # discard   = clean -dfx

    l       = pull --rebase --autostash

    lo      = log --all --graph --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'
    los     = log --all --graph --simplify-by-decoration --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'

    # squashm = !git merge --squash $1 && git commit && :
    squashm = !git rebase -i master $1 && git checkout master && git merge --ff-only $1 && :

    p       = push
    pu      = push -u origin HEAD

    s       = status

    t       = tag
    td      = tag -d
    # tl      = tag -l

[color]
    ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
    # or set $GIT_PAGER
	pager = nvim -R

[diff]
    algorithm = histogram
	# renames = copies

[fetch]
    parallel = 0
    prune = true
    pruneTags = true

[rebase]
    autoStash = true
    abbreviateCommands = true

[tag]
	sort = version:refname

[url "git@github.com:seankhliao/"]
    insteadOf = "s:"
    insteadOf = "git://github.com/seankhliao/"
    insteadOf = "https://github.com/seankhliao/"

[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com/"
	insteadOf = "https://github.com/"

[user]
    email = seankhliao@gmail.com
    name = Sean Liao
