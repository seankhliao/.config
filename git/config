[advice]
	addIgnoredFile = false
[alias]
    a       = add
    amend   = commit --amend --reuse-message=HEAD

    b       = checkout
    bprune  = fetch -a
    bd      = branch -D
    bn      = checkout -b
    bm      = checkout master

    c       = clone --recursive

    cam     = !git commit -a -m "\""$*"\"" && :
    camp    = !git commit -a -m "\""$*"\"" && git push && :
    cm      = commit -m

    d       = diff
    dh      = diff HEAD

    discard   = clean -dfx

    l       = pull --rebase --autostash

    lo      = log --all --graph --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'
    los     = log --all --graph --simplify-by-decoration --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'

    m       = merge

    p       = push
    pu      = push -u origin HEAD

    s       = status

    t       = tag
    td      = tag -d
    tl      = tag -l

[color]
    ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	page = nvim -R

[diff]
    algorithm = histogram
	renames = copies

[fetch]
    prune = true

[tag]
	sort = version:refname

[url "git@github.com:seankhliao/"]
    insteadOf = "s:"
    insteadOf = "git://github.com/seankhliao/"
    insteadOf = "https://github.com/seankhliao/"

[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com/"
	insteadOf = "https://github.com/"

[user]
    email = seankhliao@gmail.com
    name = Sean Liao
