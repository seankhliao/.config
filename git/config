[advice]
	addIgnoredFile = false

[alias]
    a       = add

    b       = checkout
    bprune  = fetch -a
    bd      = branch -D
    bn      = checkout -b

    c       = clone --recursive

    cam     = !git commit -a -m "\""$*"\"" && :
    camp    = !git commit -a -m "\""$*"\"" && git push && :
    cm      = !git commit  -m "\""$*"\"" && :

    d       = diff
    dh      = diff HEAD

    l       = pull --rebase --autostash

    lo      = log --all --graph --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'
    los     = log --all --graph --simplify-by-decoration --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'

    p       = push
    pu      = push -u origin HEAD

    s       = status

    t       = tag

[color]
    ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = green
	changed = yellow
	untracked = red

[diff]
    algorithm = histogram

[fetch]
    parallel = 0
    prune = true
    pruneTags = true

[filter "ageencrypt"]
	clean = age -r age14mg08panez45c6lj2cut2l8nqja0k5vm2vxmv5zvc4ufqgptgy2qcjfmuu -a -
	smudge = age -d -i ~/.ssh/age.key -
	required = true

[init]
    defaultBranch = main

[pull]
    rebase = true

[rebase]
    autoStash = true
    abbreviateCommands = true

[tag]
	sort = version:refname

[url "git@github.com:seankhliao/"]
    insteadOf = "s:"
    insteadOf = "git://github.com/seankhliao/"
    insteadOf = "https://github.com/seankhliao/"

[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com/"
	insteadOf = "https://github.com/"

[user]
    email = seankhliao@gmail.com
    name = Sean Liao

[http]
	cookiefile = /home/arccy/.ccookies

[credential "https://source.developers.google.com"]
