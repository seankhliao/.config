[alias]
    a   = add

    b   = checkout
    bd  = branch -d
    bl  = branch
    bn  = checkout -b
    bm  = !git checkout $1 && git rebase -i master && git checkout master && git merge $1 && :

    cma     = commit --amend -m
    cama    = commit --amend -a -m
    cm      = commit -m
    cam     = commit -a -m
    camp    = !git commit -a -m \"$1\" && git push && :

    cl  = clone
    mcl = !git clone "git@github.com:seankhliao/$1" && :
    hcl = !git clone "git@github.com:$1" && :

    dh  = diff HEAD

    l       = pull --rebase

    lo  = log --graph --color=always --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'

    p   = push
    po  = !git remote add origin $1 && git push -u origin master && :

    s   = status

    suba    = submodule add -b master
    subl    = submodule update --recursive --remote --rebase
    subp    = push --recurse-submodules=on-demand

[blame]
    coloring = highlightRecent

[color]
    ui = always
    

[credential]
    helper = store


[user]
    email = seankhliao@gmail.com
    name = Sean Liao

[tag]
	sort = version:refname
[core]
	page = nvim -R
