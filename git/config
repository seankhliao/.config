[alias]
    a = add
    cam = commit -a -m
    camp = !git commit -a -m \"$1\" && git push && :
    cm = commit -m
    l = pull
    lr = pull --rebase
    lo = log --graph --color=always --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'
    p = push
    s = status
    va = !git tag $(semver -i major $(git tag | tail -n 1))
    vm = !git tag $(semver -i minor $(git tag | tail -n 1))
    vp = !git tag $(semver -i patch $(git tag | tail -n 1))

[blame]
    coloring = highlightRecent

[color]
    branch = false
    diff = false
    pager = false
    ui = always
    

[credential]
    helper = store


[user]
    email = seankhliao@gmail.com
    name = Sean Liao

[tag]
	sort = version:refname
