[alias]
    a       = add
    am      = commit --amend --reuse-message=HEAD

    b       = checkout
    bclean  = fetch --all --prune
    bd      = branch -d
    bl      = branch -a
    # bm      = !git rebase master "$1" && git checkout master && git merge
    bn      = checkout -b
    bmaster = checkout master

    c       = clone --recursive

    cm      = commit -m
    cam     = commit -a -m
    camp    = !git commit -a -m \"$1\" && git push && :

    d       = diff
    dh      = diff HEAD

    l       = pull --rebase --autostash

    lo      = log --all --graph --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'
    los     = log --all --graph --simplify-by-decoration --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'

    m       = merge

    p       = push
    po      = !git remote add origin $1 && git push -u origin master && :
    pu      = !git push -u origin $(git branch --show-current)

    r       = remote -v

    s       = status

    t       = tag
    tl      = tag -l

[color]
    ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	page = nvim -R

[diff]
	renames = copies

[url "git@github.com:seankhliao/"]
    insteadOf = "https://github.com/seankhliao/"
    insteadOf = "s:"
    insteadOf = "git://github.com/seankhliao/"

[url "git@github.com:"]
	insteadOf = "https://github.com/"
	insteadOf = "gh:"
	insteadOf = "git://github.com/"

[user]
    email = seankhliao@gmail.com
    name = Sean Liao

[tag]
	sort = version:refname
