[alias]
    a       = add
    am      = commit --amend --reuse-message=HEAD

    b       = checkout
    bd      = branch -d
    bl      = branch -a
    bm      = rebase master
    bn      = checkout -b

    c       = !git clone --recursive "$@" && cd "$1" && :

    cm      = commit -m
    cam     = commit -a -m
    camp    = !git commit -a -m \"$1\" && git push && :

    d       = diff
    dh      = diff HEAD

    l       = !git pull --rebase && git submodule foreach git pull --rebase && :

    lo      = log --graph --format='%C(auto)%h%d %s %C( bold black)%cr %C(blue)<%an>'

    p       = push
    po      = !git remote add origin $1 && git push -u origin master && :

    r       = remote -v

    s       = status

    t       = tag
    tl      = tag -l

[color]
    ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	page = nvim -R

[diff]
	renames = copies

[url "git@github.com:seankhliao/"]
    insteadOf = "https://github.com/seankhliao/"
    insteadOf = "s:"
    insteadOf = "git://github.com/seankhliao/"

[url "git@github.com:"]
	insteadOf = "https://github.com/"
	insteadOf = "gh:"
	insteadOf = "git://github.com/"

[user]
    email = seankhliao@gmail.com
    name = Sean Liao

[tag]
	sort = version:refname
